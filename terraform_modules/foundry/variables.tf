variable environment-name {
  type        = string
  default     = ""
  description = "The name of the environment"
}

variable foundry-version {
  type        = string
  default     = ""
  description = "The version string controlling what version of Foundry we run"
}

variable foundry-username {
  type        = string
  default     = ""
  description = "The username used to authenticate with Foundry"
}

variable foundry-password {
  type        = string
  default     = ""
  description = "The password used to authenticate with Foundry"
}